{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "target": "es2020",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [ "es2015", "dom" ],
    "typeRoots": [
      "node_modules",
    ],
    "types": [
      "@elastosfoundation/elastos-cordova-plugin-did",
      "@elastosfoundation/elastos-cordova-plugin-hive",
      "svelte",
      "svelte/store",
      "svelte/motion",
      "svelte/transition",
      "svelte/animate",
      "svelte/easing"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "dist/*"]
}