{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "module": "es2020",
    "moduleResolution": "node",
    "isolatedModules": true,
    "preserveConstEnums": true,
    "typeRoots": [
      "node_modules",
    ],
    "types": [
      "web3-core/types",
      "elastos-cordova-plugin-did",
      "elastos-cordova-plugin-hive",
      "svelte",
      "svelte/store",
      "svelte/motion",
      "svelte/transition",
      "svelte/animate",
      "svelte/easing"
    ]
  },
  "include": ["src/**/*", "services"]
}